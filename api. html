<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Candidate List from API</title>
<style>
  table { border-collapse: collapse; width: 100%; }
  th, td { border: 1px solid #ccc; padding: 8px; text-align: left; }
  th { background: #1abc9c; color: white; }
</style>
</head>
<body>
<h1>Candidate List</h1>
<button id="loadBtn">Load Candidates</button>
<table>
  <thead>
    <tr><th>Name</th><th>Email</th><th>Position</th><th>Status</th></tr>
  </thead>
  <tbody id="candidateTableBody">
  </tbody>
</table>

<script>
  document.getElementById('loadBtn').addEventListener('click', async () => {
    const tbody = document.getElementById('candidateTableBody');
    tbody.innerHTML = 'Loading...';

    try {
      // Replace URL with your actual API endpoint
      const response = await fetch('https://your-backend-api.com/api/candidates');
      if (!response.ok) throw new Error('Failed to fetch candidates');
      const candidates = await response.json();

      tbody.innerHTML = '';
      candidates.forEach(c => {
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${c.name}</td>
          <td>${c.email}</td>
          <td>${c.position}</td>
          <td>${c.status}</td>
        `;
        tbody.appendChild(tr);
      });
    } catch (err) {
      tbody.innerHTML = `<tr><td colspan="4" style="color:red;">${err.message}</td></tr>`;
    }
  });
</script>
</body>
</html>